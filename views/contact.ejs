    <%- include("partials/header") -%>
    <!-- Contact Section -->
    <section id="contact-us">
      <div class="container contact">
        <h2 class="text-center">Feel Free to <span class="text-info">Contact Me!</span></h2>
        <form action="/contact" method="post">
          <div class="contact-form row justify-content-center align-items-center">
            <div class="m-3 col-lg-6">
              <input type="text" class="form-control" name="name" placeholder="Enter your name">
            </div>
            <div class="m-3 col-lg-6">
              <input type="email" class="form-control" name="email" placeholder="Enter your email">
            </div>
            <div class="m-3 col-lg-6">
              <textarea name="message" class="form-control" placeholder="Enter your message here.." rows="7"></textarea>
            </div>
            <div class="row">
              <div class="col d-flex justify-content-center">
                <button class="submit-button btn btn-outline-info" type="submit">Submit</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      </section>
      <%- include("partials/footer") -%>